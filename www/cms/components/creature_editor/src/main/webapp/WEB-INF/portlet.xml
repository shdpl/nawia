<?xml version="1.0" encoding="UTF-8"?>
<portlet-app version="1.0"
    xmlns="http://java.sun.com/xml/ns/portlet/portlet-app_1_0.xsd"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/portlet/portlet-app_1_0.xsd http://java.sun.com/xml/ns/portlet/portlet-app_1_0.xsd">
    <portlet>
        <description xml:lang="EN">This is a creature editor for Nawia RPG. Here, you can edit various kinds of monsters</description>
        <portlet-name>Creature Editor</portlet-name>
        <display-name xml:lang="EN">Creature Editor - display name</display-name>
        <portlet-class>org.zkoss.zk.ui.http.DHtmlLayoutPortlet</portlet-class>
        <expiration-cache>0</expiration-cache>
        <supports>
            <mime-type>text/html</mime-type>
            <portlet-mode>view</portlet-mode>
        </supports>
        <supported-locale>en</supported-locale>
        <portlet-info>
            <title>Nawia RPG Creature Editor</title>
            <short-title>Creature Editor</short-title>
            <keywords>nawia,tool,editor</keywords>
        </portlet-info>
        <portlet-preferences>
            <preference>
                <name>zk_page</name>
                <value>/index.zul</value>
            </preference>
        </portlet-preferences>
        <security-role-ref>
            <role-name>power-user</role-name>
        </security-role-ref>
        <security-role-ref>
            <role-name>user</role-name>
        </security-role-ref>
        <security-role-ref>
            <role-name>administrator</role-name>
        </security-role-ref>
    </portlet>
</portlet-app>